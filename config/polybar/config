;;;;;;;;;;;;;
;; MODULES ;;
;;;;;;;;;;;;;


[module/pulseaudio-control]
type = custom/script
tail = true
format-underline = ${colors.cyan}
label-padding = 2
label-foreground = ${colors.foreground}

# Icons mixed from Font Awesome 5 and Material Icons
# You can copy-paste your options for each possible action, which is more
# trouble-free but repetitive, or apply only the relevant ones (for example
# --sink-blacklist is only needed for next-sink).
exec = pulseaudio-control --sink-nickname "Speakers" --sink-nickname "Headphones" listen
click-right = exec pavucontrol &
click-left = pulseaudio-control togmute
click-middle = pulseaudio-control --sink-blacklist "alsa_output.pci-0000_01_00.1.hdmi-stereo-extra2" next-sink
scroll-up = pulseaudio-control --volume-max 130 up
scroll-down = pulseaudio-control --volume-max 130 down


[module/diskroot]
type = custom/script
interval = 3

exec = ~/.config/polybar/bar-hdd.sh 1 "/"
format-prefix = " || "
format-foreground = ${colors.foreground}
format-background = ${colors.background}
format-padding = 2
label-active-font = 2


[module/diskhome]
type = custom/script
interval = 3
format-prefix = " || "
format-padding = 2
exec = ~/.config/polybar/bar-ssd.sh 1 /home
format-foreground = ${colors.foreground}
format-background = ${colors.background}


[module/weather]
type = custom/script
format-prefix = " || "
format-padding = 2
exec = ~/.config/polybar/weather.sh
interval = 2000


;;;;;;;;;;
;; TIME ;;
;;;;;;;;;;
[module/hour]
type = internal/date
interval = 1
date = %H:%M:%S %p
format = <label>
format-prefix = " || "
format-padding = 2
format-background = ${colors.background}
format-foreground = ${colors.foreground}
label = "%date%"
label-padding = 2

;;;;;;;;;;;
;;  DATE ;;
;;;;;;;;;;;
[module/date]
type = internal/date
interval = 1
format-foreground = ${colors.foreground}
format-prefix = " || "
format-padding = 2
format-background = ${colors.background}
date = %a, %d %b %Y%
format = <label>
label = "%date%"
label-padding = 2


;;;;;;;;
;; i3 ;;
;;;;;;;;
[module/i3]
type = internal/i3
pin-workspaces = true
strip-wsnumbers = true
index-sort = true
enable-click = true
enable-scroll = true
wrapping-scroll = false
reverse-scroll = false
fuzzy-match = false

ws-icon-0 = 1;  Browser
ws-icon-1 = 2;  Terminal
ws-icon-2 = 3;  Steam
ws-icon-3 = 4;  Files
ws-icon-4 = 5;  Programming
ws-icon-5 = 6;  Torrents
ws-icon-6 = 7;  Others
ws-icon-7 = 8;  Others
ws-icon-8 = 9;  Others
ws-icon-9 = 10s;  Gaming

format = <label-state> <label-mode>

label-mode = %mode%
label-mode-padding = 4
label-mode-background = ${colors.background}

label-focused = %name%
label-focused-foreground = ${colors.background}
label-focused-background = ${colors.foreground}
label-focused-underline = #c6c6c6
label-focused-padding = 4

label-unfocused =  %name%
label-unfocused-foreground = ${colors.foreground}
label-unfocused-background = ${colors.background}
label-unfocused-underline = ${colors.background}
label-unfocused-padding = 4

label-visible =  %name%
label-visible-underline = #15539E
label-visible-padding = 4

label-urgent =  %name%
label-urgent-foreground = ${colors.background}
label-urgent-background = ${colors.foreground}
label-urgent-underline = ${colors.green}
label-urgent-padding = 4

 
label-separator = |
label-separator-foreground = #737f7f

;;;;;;;;;;;;;
;; LAYOUTS ;;
;;;;;;;;;;;;;


[module/cpu]
type = internal/cpu
interval = 1
format-foreground = ${colors.foreground}
format-padding = 2
format-prefix = " ||   "
format = <label>
label = CPU usage: %percentage%%

[module/memory]
type = internal/memory
interval = 1
format-foreground = ${colors.foreground}
format-padding = 2
format-prefix = " || " 
format-underline = #4bffdc
label = RAM: %percentage_used%% used
label-padding = 2
